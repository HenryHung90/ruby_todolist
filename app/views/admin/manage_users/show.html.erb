<div class="home_container d-flex justify-content-center align-items-center">
  <p class="h1 mb-5">User Details</p>
  <div class="flex justify-between items-center w-1/3 p-2 text-left">
    <div><strong>Username</strong></div>
    <div><%= @user.username %></div>
  </div>
  <div class="flex justify-between items-center w-1/3 p-2 text-left">
    <div><strong>Name</strong></div>
    <div><%= @user.name %></div>
  </div>
  <div class="flex justify-between items-center w-1/3 p-2 text-left">
    <div><strong>Role</strong></div>
    <div><%= @user.role_id %></div>
  </div>
  <div class="flex justify-between items-center w-1/3 p-2 text-left">
    <div><strong>Created_at</strong></div>
    <div><%= @user.created_at ? @user.created_at.strftime("%Y-%m-%d %H:%M:%S") : 'N/A' %></div>
  </div>
  <div class="flex justify-between items-center w-1/3 p-2 text-left">
    <div><strong>Updated_at</strong></div>
    <div><%= @user.updated_at ? @user.updated_at.strftime("%Y-%m-%d %H:%M:%S") : 'N/A' %></div>
  </div>
  <div class="p-2">
    <%= link_to 'Edit', edit_admin_manage_user_path(@user), class: 'btn btn-primary w-150 px-2' %>
    <%= link_to 'Back', admin_manage_users_path, class: 'btn btn-secondary w-150 px-2' %>
    <%= link_to 'Delete', admin_manage_user_path(@user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger w-150 px-2' %>
  </div>
</div>
