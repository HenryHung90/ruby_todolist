<%= form_with(model: [@user, @task], local: true, class: 'w-1/3 flex flex-col justify-center') do |f| %>
  <% if @task.errors.any? %>
    <div>
      <% @task.errors.full_messages.each do |message| %>
        <h2 style="color:red"><%= message %></h2>
      <% end %>
    </div>
  <% end %>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :content, "Content" %>
    <%= f.text_area :content %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :priority, "Priority" %>
    <%= f.select :priority, %w'high medium low' %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :status, "Status" %>
    <%= f.select :status, %w'pending progress done' %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :start_time, "Start Time" %>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :end_time, "End Time" %>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="flex justify-between items-center w-full p-2 text-left">
    <%= f.label :tags, "Tags" %>
    <div id="tags">
      <%= f.fields_for :tags do |tags_field| %>
        <div class="tag-fields my-2">
          <%= tags_field.label :name, "Tag Name" %>
          <%= tags_field.text_field :name %>
          <%= tags_field.check_box :_destroy %>
          <%= tags_field.label :_destroy, "Remove" %>
        </div>
      <% end %>
    </div>
  </div>
  <div data-controller="task">
    <button type="button" id="add-tag" class="btn btn-secondary" data-action="click->task#addTags">Add Tag</button>
  </div>
  <div class="actions">
    <%= f.submit @task.new_record? ? "Create Task" : "Update Task", class:'btn btn-success mt-5'%>
  </div>
<% end %>
