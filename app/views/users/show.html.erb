<div class="home_container d-flex justify-content-center align-items-center">
  <%= render 'shared/navbar' %>
  <div class="sort-buttons">
    <%#= link_to 'join date sort', user_path(sort: 'join_date'), data: { turbo_frame: 'tasks' }, class: 'btn btn-primary' %>
    <%#= link_to 'start date sort', user_path(sort: 'start_date'), data: { turbo_frame: 'tasks' }, class: 'btn btn-primary' %>
    <%= link_to 'end date sort', user_path(sort: 'end_date'), data: { turbo_frame: 'tasks' }, class: 'btn btn-primary' %>
  </div>
  <div class="todolist_container">
    <%= turbo_frame_tag 'tasks' do %>
      <table class="table todolist_table">
        <tr>
          <th class="col-2">Title</th>
          <th class="col-1">Label</th>
          <th class="col-1">Pry</th>
          <th class="col-1">Status</th>
          <th class="col-2">Join Date</th>
          <th class="col-2">Start Date</th>
          <th class="col-2">End Date</th>
          <th class="col-1">Setting</th>
        </tr>
        <%= render @tasks %>
      </table>
    <% end %>
  </div>
  <% flash.each do |type, msg| %>
    <script>alert("<%= msg %>")</script>
    <p><%= msg %></p>
  <% end %>
</div>
