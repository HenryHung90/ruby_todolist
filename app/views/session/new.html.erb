<div class="home_container d-flex justify-content-center align-items-center">
  <p class="h1 mb-5">Login</p>
  <%= form_with url: login_path, local: true, class: 'w-1/3 flex flex-col justify-center' do |f| %>
    <div class="my-2">
      <%= f.label :username %><br/>
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="my-2">
      <%= f.label :password %><br/>
      <%= f.password_field :password, autocomplete: "password" %>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: 'mt-8 btn btn-success w-full' %>
    </div>
  <% end %>
</div>

